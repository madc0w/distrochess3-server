{
	"name": "distrochess3-worker",
	"version": "0.1.0",
	"description": "Background worker for distrochess3 deployed on Heroku",
	"main": "dist/server.js",
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"start": "node dist/server.js",
		"start:dev": "ts-node-dev --respawn --transpile-only server.ts",
		"heroku-postbuild": "npm run build"
	},
	"keywords": [
		"heroku",
		"worker",
		"distrochess"
	],
	"author": "",
	"license": "MIT",
	"engines": {
		"node": ">=20.0.0"
	},
	"dependencies": {
		"dotenv": "^16.4.7"
	},
	"devDependencies": {
		"@types/node": "^22.7.5",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.6.3"
	}
}
